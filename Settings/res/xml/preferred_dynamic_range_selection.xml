<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:title="@string/preferred_dynamic_range_title"
                  android:key="preferred_dynamic_range_selection_screen" >

    <PreferenceCategory
        android:key="preferred_dynamic_range_selection_option">
        <com.android.tv.settings.RadioPreference
            android:key="preferred_dynamic_range_selection_system"
            android:persistent="true"
            app:radioGroup="preferred_dynamic_range_selection_option"
            android:title="@string/preferred_dynamic_range_selection_system_title"
            android:summary="@string/preferred_dynamic_range_selection_system_desc" />
        <com.android.tv.settings.RadioPreference
            android:key="preferred_dynamic_range_selection_passthrough"
            android:persistent="true"
            app:radioGroup="preferred_dynamic_range_selection_option"
            android:title="@string/match_content_dynamic_range_title"
            android:summary="@string/preferred_dynamic_range_selection_passthrough_desc" />
        <com.android.tv.settings.RadioPreference
            android:key="preferred_dynamic_range_selection_force"
            android:persistent="true"
            app:radioGroup="preferred_dynamic_range_selection_option"
            android:title="@string/preferred_dynamic_range_selection_force_title"
            android:summary="@string/preferred_dynamic_range_selection_force_desc" />
    </PreferenceCategory>
</PreferenceScreen>
